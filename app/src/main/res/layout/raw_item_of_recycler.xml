<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/curve_background"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/show_img_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title : "
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/show_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/show_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Golmal 3"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/title_tv"
            app:layout_constraintTop_toTopOf="@id/title_tv"
            app:layout_constraintBottom_toBottomOf="@id/title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description : "
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/show_description_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Golmal 3 is very funny movie, It is very good sens of hummer"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/description_tv"
            app:layout_constraintStart_toStartOf="@id/description_tv"
            app:layout_constraintEnd_toEndOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>